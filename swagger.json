    }
  },
  "paths": {
    "/api/articles/{id}/status": {
      "put": {
        "summary": "Update Article Status",
        "description": "This API allows you to update the status of an existing article.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "status",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["draft", "submitted", "approved", "removed"]
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string"
                  }
                },
                "required": ["status"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success: The article status was successfully updated.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ArticleStatusUpdateResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request: The request was malformed or had invalid parameters."
          },
          "404": {
            "description": "Not Found: The specified article does not exist."
          },
          "422": {
            "description": "Unprocessable Entity: The request body or parameters are in the wrong format."
          },
          "500": {
            "description": "Internal Server Error: An unexpected error occurred on the server."
          }
        }
      }
    }
  }
}